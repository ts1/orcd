{
  "name": "orcd",
  "version": "0.3.2",
  "license": "MIT",
  "description": "Comment downloader for OPENREC.tv",
  "author": "Takeshi Sone <takeshi.sone@gmail.com> (https://github.com/ts1)",
  "repository": "github:ts1/orcd",
  "dependencies": {
    "coffeescript": "^2.5.1",
    "node-fetch": "^2.6.1",
    "xml2js": "^0.4.23",
    "xmlbuilder2": "^2.3.1",
    "yargs": "^16.0.3"
  },
  "scripts": {
    "orcd": "src/bootstrap.js",
    "test": "jest",
    "dist": "rm -rf dist && mkdir dist && for f in src/*.coffee; do coffee -cs < $f >dist/`basename $f .coffee`.js; done; cp src/bootstrap.js dist"
  },
  "main": "dist/orcd.js",
  "bin": {
    "orcd": "dist/bootstrap.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "jest": "^26.4.2"
  },
  "jest": {
    "transform": {
      "\\.coffee$": "<rootDir>/tests/coffee-preprocessor.js"
    },
    "testRegex": "tests/.+\\.coffee$",
    "moduleFileExtensions": [
      "js",
      "coffee"
    ]
  }
}
